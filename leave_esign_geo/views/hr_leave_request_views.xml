<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_leave_esign_tree" model="ir.ui.view">
    <field name="name">leave.esign.tree</field>
    <field name="model">leave.esign</field>
    <field name="arch" type="xml">
      <list string="Leave Requests">
        <field name="name"/>
        <field name="employee_name"/>
        <field name="date_from"/>
        <field name="date_to"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <record id="view_leave_esign_form" model="ir.ui.view">
    <field name="name">leave.esign.form</field>
    <field name="model">leave.esign</field>
    <field name="arch" type="xml">
      <form string="Leave Request">
                      <header>

            <button name="action_send_link" type="object" string="Send Link to Employee" class="btn-primary"/>
            <button name="action_send_to_manager" type="object" string="Send to Manager"/>
            <button name="action_approve" type="object" string="Approve"/>
            <button name="action_reject" type="object" string="Reject"/>
                <field name="state" widget="statusbar" />

            </header>
        <sheet>

          <group>
            <field name="name" readonly="1"/>
            <field name="employee_name"/>
            <field name="employee_email"/>
            <field name="leave_type_id"/>
            <field name="date_from"/>
            <field name="date_to"/>
            <field name="reason"/>
            <field name="state"/>
          </group>

          <group string="Signature Info">
            <field name="signature" widget="binary"/>
            <field name="signed_location"/>
            <field name="signature_time"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <record id="action_leave_esign_tree" model="ir.actions.act_window">
    <field name="name">Leave Requests</field>
    <field name="res_model">leave.esign</field>
    <field name="view_mode">list,form</field>
  </record>
  <menuitem id="menu_leave_esign_root" name="Leave eSign" sequence="50"/>
  <menuitem id="menu_leave_esign_requests" name="Requests" parent="menu_leave_esign_root" action="action_leave_esign_tree"/>



</odoo>