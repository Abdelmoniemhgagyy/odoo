<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="mail_template_sign_link" model="mail.template">
    <field name="name">Leave Sign Link</field>
    <field name="email_from">{{(user.email or user.email_formatted)}}</field>
    <field name="subject">Please sign your leave request</field>
    <field name="body_html" type="xml">
      <t t-call="leave_esign_geo.email_leave_sign_link">
        <t t-set="object" t-value="object"/>
      </t>
    </field>
    <field name="model_id" ref="leave_esign_geo.model_leave_esign"/>
  </record>
</odoo>