<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="create_appointment_wizard_form" model="ir.ui.view">
        <field name="name">create Appointment Wizard</field>
        <field name="model">create.appointment.wizard</field>
        <field name="arch" type="xml">
        <form string="Create Appointment">
            <group>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date_appointment"/>
            </group>
            <footer>
                <button name="create_appointment" string="Create" type="object" class="btn btn-primary"/>
                <button name="appointment_view" string="View Appointment" type="object" class="btn btn-primary"/>
                <button string="Cancel" class="btn btn-secondary" special="cancel" />
            </footer>
        </form>
        </field>
    </record>
      <record model="ir.actions.act_window" id="create_appointment_action">
          <field name="name">create Appointment Wizard</field>
          <field name="res_model">create.appointment.wizard</field>
          <field name="type">ir.actions.act_window</field>
          <field name="view_mode">form</field>
          <field name="view_id" ref="create_appointment_wizard_form"/>
          <field name="target">new</field>
    </record>
</odoo>
