<odoo>
        <template id="template_id_card_patient">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div>
                           <div class="card mb-3" style="max-width:720px;margin:50px auto;padding:10px;border:1px solid #000">
                          <div class="row no-gutters">
                            <div class="col-md-6">
                              <img t-if="o.image" t-att-src="image_data_uri(o.image)" class="card-img" style="height:100%" alt="..."/>
                            <img t-if="not o.image" t-att-src="'/website/static/src/img/snippets_thumbs/s_picture.svg'" class="card-img" style="height:100%" alt="Default Image"/>
                            </div>
                            <div class="col-md-6 ">
                              <div class="card-body">
                                <div class="row">
                                   <h5 class="col"><strong>Patient Name: </strong></h5> <h5 class="card-title col" t-field="o.name"/>
                                </div>
                                  <div class="row">
                                      <h5 class="col"><strong>Age : </strong></h5> <h5 class="card-title col" t-field="o.age"/>
                                  </div>

                              </div>
                            </div>
                          </div>
                        </div>
                            <table class="table" style="width:80% ; margin:20px auto">
                                      <thead class="thead-dark">
                                        <tr>
                                          <th scope="col">#</th>
                                          <th scope="col">Reference</th>
                                          <th scope="col">Patient</th>
                                          <th scope="col">Age</th>
                                          <th scope="col">Gender</th>
                                        </tr>
                                      </thead>
                                <tbody>
                                        <t t-set="counter" t-value="1"/>
                                        <t t-foreach="o.appointment_ids" t-as="line">
                                            <tr>
                                                <td><t t-esc="counter"/></td>
                                                <td><span t-field="line.reference"/></td>
                                                <td><span t-field="line.patient_id.name"/></td>
                                                <td><span t-field="line.age"/></td>
                                                <td><span t-field="line.gender"/></td>
                                            </tr>
                                            <t t-set="counter" t-value="counter + 1"/>
                                        </t>
                                </tbody>
                            </table>

                        </div>
                    </t>
                </t>
            </t>
    </template>
</odoo>
