<odoo>
    <template id="template_wizard_appointment_pdf">
            <t t-call="web.html_container">
                    <t t-call="web.external_layout">
                        <div>
                          <h2>Hgagy</h2>
                        </div>
                        <div class="d-flex gap-4">
                            <p>Name Patient :</p>
                            <t t-if="form.get('patient_id')">
                                  <t t-esc="form['patient_id'][1]"/>
                            </t>
                        </div>
                        <div class="d-flex gap-4">
                            <p>Date Form : </p>
                           <t t-esc="form['date_from']"/>
                        </div>
                        <div class="d-flex gap-4">
                            <p>Date To : </p>
                           <t t-esc="form['date_to']"/>
                        </div>

                        <t t-foreach="appointments" t-as="line">
                            <div class="d-flex  p-4  gap-4">
                                <div class="d-flex flex-row me-4 gap-4">
                                    <p>Date Appointment</p>
                                    <span t-esc="line['date_appointment']"/>
                                </div>
                                <div class="d-flex gap-4">
                                    <p>Age</p>
                                    <span t-esc="line['age']"/>
                                </div>

                            </div>
                        </t>


                    </t>
            </t>
    </template>
</odoo>
